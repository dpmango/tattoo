  &__col
    flex: 0 1 33%
    padding-left: 10px
    padding-right: 10px
  &__card
    display: block
    position: relative
    margin-bottom: 20px
    &:hover
      &::after
        opacity: 1
        position: absolute -10px
    &::after
      display: block
      content: ' '
      position: absolute 0 0 0 0
      border: 3px solid $colorPrimary
      opacity: 0
      transition: all $transitionSpeed $ease
    &__wrapper
      overflow: hidden
      display: flex
      flex-direction: column
      justify-content: space-between
      min-height: 180px
      position: relative
      padding: 20px
      background: transparent
      border: 2px solid color(white a(50%))
    &--dark
      .blog__card__wrapper
        background: #18181D
        border-color: transparent
    &--image
      .blog__card__wrapper
        border-color: transparent
        &::after
          display: block
          content: ' '
          position: absolute 0 0 0 0
          background: color(#18181D a(80%))
          z-index: 2
    &__image
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      z-index: 1
      width: 100%

    &__title
      position: relative
      z-index: 3
      font-family: 'RoadRadio'
      font-size: 20px
      letter-spacing: 1.8px
    &__metrics
      position: relative
      z-index: 3
      font-size: 14px
      .ico
        opacity: .5
        margin-right: 5px
      span
        vertical-align: -2px

  &__promo
    min-height: 580px
    padding: 20px
    background: url('../images/el/blogPromoBg.png') no-repeat top center
    background-size: cover
    display: flex
    flex-direction: column
    .blog__card__title
      color: $colorPrimary
    &__text
      padding: 0
      margin: 0
      font-size: 14px
      line-height: 1.145
      padding-bottom: 10px
    &__counter
      display: flex
      justify-content: space-between
      align-items: center
      margin-bottom: 40px
    &__form
      flex: 1
      margin-top: auto

@media(width <= 940px)
  .blog
    &__wrapper
      justify-content: center
    &__col
      flex-basis: 300px
      &--promo
        flex-basis: 100%
    &__promo
      min-height: 1px
      flex-direction: row
      align-items: center
      &__description
        flex: 0 1 auto
        padding-right: 30px
        max-width: 300px
        margin-right: auto
      &__form
        flex: 0 0 270px
        margin-top: 0
      &__counter
        margin-bottom: 10px
        justify-content: flex-start
      &__triangle
        margin-left: 30px

@media(width <= 640px)
  .blog
    &.expanded
      .blog__col
        display: block
    &__col
      display: none
      flex-basis: 600px
      &:first-child
        display: block
      &--promo
        display: none !important
    .toggler-more
      display: block
      position: absolute
      bottom: 0
      left: 0
      right: 0
      font-size: 18px
      background: $colorPrimary
      text-align: center
      padding: 20px
      color: $fontColor


// SEO
.seo
  padding-top: 60px
  padding-bottom: 20px
  background: #18181D
  color: white
  &__links
    display: flex
    justify-content: space-between
    font-size: 20px
    letter-spacing: 2.2px
    a
      position: relative
      transition: all $transitionSpeed $ease
      &:after
        display: block
        content: ' '
        position: absolute
        left: 50%
        right: 50%
        background: $colorPrimary
        height: 2px
        bottom: -3px
        transition: all $transitionSpeed $ease
      &:hover, &.active
        color: $colorPrimary
      &.active
        &::after
          left: 0
          right: 0
  &__tab
    display: none
    &.active
      display: block

@media($tablet)
  .seo
    display: none
