  &--inner
    padding-top: 60px
    .blog__wrapper
      padding-top: 35px
      padding-bottom: 80px
      min-height: 1px
  &__wrapper
    padding-top: 80px
    padding-bottom: 100px
    max-width: 900px
    margin-left: auto
    margin-right: auto
    min-height: 100vh
    display: flex
    flex-wrap: wrap
  .toggler-more
