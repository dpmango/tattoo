    line-height: 1
    margin-top: 40px
  &__rating
    margin-top: 40px
    color: $colorPrimary
    span
      margin-right: 10px
    .ico
      margin-right: 5px
  &__cta
    text-align: center
    margin-top: 13vh
  &__nav
    text-align: center
    margin-top: 5vh
    font-size: 14px
    opacity: .5

  &__picture
    flex: 0 1 50%
    margin-left: 20px
    margin-left: auto
    overflow: hidden
    picture
      position: relative
      display: block
      width: 100%
      height: 100vh
    img
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      display: none
      max-width: 100%
      &.active
        display: inline-block

@media($wide)
  .testimonials
    &__content
      padding-left: 20px

@media($desktop)
  .testimonials
    &__rateable
      flex-direction: column

@media($tablet)
